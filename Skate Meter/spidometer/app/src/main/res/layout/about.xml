<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:text="Tentang Aplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Versi 1.0"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="1sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nama : M Irfan Syarifuddin"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nrp : 171-111-051"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Supported by :"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="3dp"/>
        <ImageButton
            android:id="@+id/stiki_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/stiki"
            android:paddingTop="100dp"
            android:layout_marginTop="10sp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sekolah tinggi Informatika dan Komputer Indonesia"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="JL. Raya Tidar No 100 Malang"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="www.stiki.ac.id"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="3dp"/>
        <Button
            android:id="@+id/ButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginBottom="15dp"/>


    </LinearLayout>


</LinearLayout>